@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">TATA Test</h1>
    <p>Learn about <a href="https://www.linkedin.com/in/mpatino06/">Miguel A. Patiño H.</a>.</p>
</div>

<div class="card mt-5">
	<div class="card-header bg-dark text-light ml-0 row container">
		<div class="col-md-6">
			<i class="fa fa-save"></i>Palabaras repetidas
		</div>
		<div class="col-md-6 text-right"></div>
	</div>
	<div class="card-body">
		<form class="mt-2" method="post" asp-action="Create" id="formCountWords">
			<div class="row">



				<div class="col-3">
					<label class="col-form-label">Contador Palabras</label>
				</div>
				<div class="col-9">
					<textarea rows=5 cols=50 id="wordsToEvaluate" name="Description" placeholder="Ingrese valor" class="form-control" required="required"></textarea>

				</div>

			</div>
			<br />
			<div class="text-center">

				<div class="btn-group">
					<a href="#" class="btn btn-primary btn-large" onclick="GetValidateWords()"><i class="icon-white icon-heart"></i> Contar Palabras</a>
					<a href="#" class="btn btn-danger btn-large" onclick="CleanControls()"><i class="icon-white icon-heart"></i>Cancelar</a>
				</div>

			</div>

			<div id="divLiWords" style="display:none">
				<p>Palabras Repetidas:</p>
				<ul id="friendsList">
				</ul>
			</div>


		</form>
	</div>
</div>
